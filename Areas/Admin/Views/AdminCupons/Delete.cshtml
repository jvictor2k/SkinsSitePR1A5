@model SkinsSite.Models.Cupom

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3 class="py-2">Tem certeza que deseja deletar esse cupom?</h3>
<div>
    <h4>Skin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CupomCodigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CupomCodigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorDesconto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LimiteUso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LimiteUso)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CupomId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Retornar</a>
    </form>
</div>
