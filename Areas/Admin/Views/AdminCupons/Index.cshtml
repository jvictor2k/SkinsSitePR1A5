@model IEnumerable<SkinsSite.Models.Cupom>

<style>
    .minha-tabela td, .minha-tabela th {
        vertical-align: middle;
    }

    .sem-quebra {
        white-space: nowrap;
    }
</style>

@{
    ViewData["Title"] = "Index";
}

<h1>Cupons</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Criar novo cupom</a>
</p>
<table class="table minha-tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CupomCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDesconto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteUso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CupomCodigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorDesconto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimiteUso)
                </td>
                <td class="sem-quebra">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CupomId">Editar</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CupomId">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CupomId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
