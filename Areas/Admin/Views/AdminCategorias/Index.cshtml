@model IEnumerable<SkinsSite.Models.Categoria>

<style>
    .minha-tabela td, .minha-tabela th {
        vertical-align: middle;
    }

    .sem-quebra{
        white-space: nowrap;
    }
</style>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Criar nova Categoria</a>
</p>
<table class="table minha-tabela" height="400px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td class="sem-quebra">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
