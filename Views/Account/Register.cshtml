<div class="card shadow p-4 m-4">
    <div class="d-flex align-items-center py-4">
        <main class="w-100 m-auto form-container">
            <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                <img src="~/images/personal.png" class="mb-4" width="20%" height="20%">
                <h1 class="h3 mb-3 fw-normal py-2">Login</h1>
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" id="floatingInput" placeholder="Nome de Usuário">
                    <label asp-for="UserName" class="floatingInput">
                        Usuário
                    </label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" id="floatingInput" placeholder="Senha">
                    <label asp-for="Password" class="floatingInput">
                        Senha
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="p-4">
                    <button type="submit" class="btn btn-success w-100">
                        Entrar
                    </button>
                </div>
            </form>
        </main>
    </div>
</div>